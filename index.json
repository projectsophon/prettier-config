{
  "$schema": "http://json.schemastore.org/prettierrc",
  "singleQuote": false,
  "jsxSingleQuote": false,
  "jsxBracketSameLine": true,
  "arrowParens": "always",
  "quoteProps": "as-needed",
  "trailingComma": "es5",
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "bracketSpacing": true,
  "printWidth": 120,
  "endOfLine": "lf",
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "always"
      }
    }
  ]
}
